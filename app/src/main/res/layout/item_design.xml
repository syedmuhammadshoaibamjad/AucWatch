<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:padding="0dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="10dp"
    app:cardUseCompatPadding="true"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    tools:context=".ui.auctionfragment.AuctionFragment">

    <!-- Container for the content inside CardView -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- ImageView for the auction watch image -->
        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="12dp"
            android:scaleType="centerCrop"
            android:src="@drawable/logo"
        android:contentDescription="Auction Watch Image" />

        <!-- Watch Title -->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rolex Submariner"
            android:textColor="#333"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <!-- Description section -->
        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A premium luxury watch for collectors."
            android:textColor="#555"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <!-- Price section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="start|center_vertical">

            <TextView
                android:id="@+id/startingprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Starting Price: Rs.1000"
                android:textColor="#FF6347"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/biddingprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Bidding Price: Rs.1200"
                android:textColor="#228B22"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Bid Button -->
        <Button
            android:id="@+id/button_bid"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Place Bid"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:backgroundTint="@color/ic_launcher_background"
            android:layout_marginTop="16dp"
            android:layout_gravity="center" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
